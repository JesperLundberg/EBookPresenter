@model EBookPresenter.Models.EBookViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <h1 class="display-4">All EBooks:</h1>

    @foreach (var eBook in Model.EBooks)
    {
        @eBook.CreatedDate.ToShortDateString() <a asp-controller="SpecificEBook" asp-action="Index" asp-route-path="@eBook.Path">@eBook.Title</a><br/>
    }

</div>